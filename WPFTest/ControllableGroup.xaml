<Expander x:Class="WPFTest.ControllableGroup"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:WPFTest"
          mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="400"
          x:ClassModifier="internal"
          BorderThickness="0.5" Margin="2 4 2 4" Padding="4 2 4 2" BorderBrush="#FFABABAB"
          IsExpanded="True"
          Header="{Binding CategoryName}">
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter x:Name="GridSplit" Grid.Row="0" Grid.Column="1" Width="3" HorizontalAlignment="Stretch" Background="#FF686868" />
    </Grid>
</Expander>
