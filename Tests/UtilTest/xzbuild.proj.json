{
    "name": "UtilTest",
    "type": "executable",
    "description": "Utility test",
    "dependency": 
    [
        "AsyncExecutor", "ImageUtil", "OpenCLUtil", "StringUtil", "SystemCommon", "Nailang", "XComputeBase",
        {"ifno": ["iOS"], "+": ["WindowHost"]},
        {"ifno": ["android", "iOS"], "+": ["FreeGLUTView", "OpenGLUtil"]}
    ],
    "library": 
    {
        "static": [],
        "dynamic": ["pthread", "X11", {"ifno": ["android", "iOS"], "+": "GL"}]
    },
    "targets":
    {
        "cpp":
        {
            "sources": 
            [
                "*.cpp", 
                {"-": ["DXStub.cpp", "CURLTest.cpp"]},
                {"ifhas": "android", "-": ["GLStub.cpp", "FreeGLUTTest.cpp"]},
                {"ifhas": "iOS", "-": ["GLStub.cpp", "FreeGLUTTest.cpp", "WdHostTest.cpp"]}
            ],
            "flags": ["-Wno-unused-function"]
        },
        "rc":
        {
            "sources": ["*.rc"]
        }
    }
}