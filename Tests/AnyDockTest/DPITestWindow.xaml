<Window x:Class="AnyDockTest.DPITestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnyDockTest"
        mc:Ignorable="d"
        Title="DPITestWindow" Height="800" Width="400">
    <DockPanel>
        <TextBlock x:Name="Info" FontSize="30" DockPanel.Dock="Top"/>
        <Rectangle Fill="Gray" Stretch="Fill" MouseMove="Rectangle_MouseMove"/>
    </DockPanel>
</Window>
