{
    "name": "OpenCLUtil",
    "type": "dynamic",
    "description": "Wrapper of OpenCL Utility",
    "dependency": ["SystemCommon", "ImageUtil", "Nailang", "XComputeBase", {"ifno": "ocl_noicd", "+": ["OpenCL"]}],
    "library": 
    {
        "static": [],
        "dynamic": [{"ifhas": "ocl_noicd", "+": ["OpenCL"]}],
        "path": [{"ifhas": ["ocl_noicd", "android"], "+": "/system/vendor/lib64"}]
    },
    "targets":
    {
        "cpp":
        {
            "sources": ["*.cpp"],
            "defines": ["OCLU_EXPORT"],
            "pch": "oclPch.h"
        }
    }
}