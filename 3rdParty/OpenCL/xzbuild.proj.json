{
    "name": "OpenCL",
    "type": "dynamic",
    "description": "The OpenCL ICD Loader",
    "version": "2.2.5",
    "dependency": [],
    "library": 
    {
        "static": [],
        "dynamic": ["dl"]
    },
    "targets":
    {
        "cxx":
        {
            "defines": ["OpenCL_EXPORTS", "CL_TARGET_OPENCL_VERSION=220", "HAVE_SECURE_GETENV"],
            "flags": ["-Wno-format", "-Wno-overlength-strings"]
        },
        "c":
        {
            "sources": 
            [
                "*.c", 
                {"-": ["icd_windows.c", "icd_windows_*.c"]}
            ],
            "version": ""
        },
        "rc":
        {
            "sources": ["*.rc"]
        }
    },
    "linkflags": ["-Wl,--version-script -Wl,icd_exports.map"]
}