{
    "name": "FreeType",
    "type": "static",
    "description": "A freely available software library to render fonts",
    "version": "2.10.4",
    "dependency": ["zlib-ng", "png"],
    "srcPath": "../../FreeType/src",
    "library": 
    {
        "static": [],
        "dynamic": []
    },
    "targets":
    {
        "cxx":
        {
            "defines": 
            [
                "FT2_BUILD_LIBRARY", 
                {"ifeq":{"target":"debug"}, "+": ["FT_DEBUG_LEVEL_ERROR", "FT_DEBUG_LEVEL_TRACE"]}
            ],
            "incpath": ["$(BuildDir)", "../include", "../../zlib-ng", "$(BuildDir)/../zlib-ng", "../../libpng", "$(BuildDir)/../libpng"]
        },
        "c":
        {
            "sources": 
            [
                {"dir": "base", "+": ["ftbase.c","ftbbox.c","ftbdf.c","ftbitmap.c","ftcid.c","ftdebug.c","ftfstype.c","ftgasp.c","ftglyph.c","ftgxval.c","ftinit.c","ftmm.c","ftotval.c","ftpatent.c","ftpfr.c","ftstroke.c","ftsynth.c","ftsystem.c","fttype1.c","ftwinfnt.c"]},
                "autofit/autofit.c","bdf/bdf.c","cache/ftcache.c","cff/cff.c","cid/type1cid.c","gzip/ftgzip.c","lzw/ftlzw.c","pcf/pcf.c","pfr/pfr.c","psaux/psaux.c","pshinter/pshinter.c","psnames/psmodule.c","raster/raster.c","sfnt/sfnt.c","smooth/smooth.c","truetype/truetype.c","type1/type1.c","type42/type42.c","winfonts/winfnt.c"
            ]
        },
        "cpp":
        {
            "sources": ["*.cpp"]
        }
    }
}