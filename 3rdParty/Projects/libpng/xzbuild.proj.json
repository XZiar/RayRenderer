{
    "name": "png",
    "type": "static",
    "description": "The official PNG reference library",
    "version": {"type": "cmake", "file": "CMakeLists.txt", "targets":["PNGLIB_MAJOR", "PNGLIB_MINOR", "PNGLIB_REVISION"], "format":"{PNGLIB_MAJOR}.{PNGLIB_MINOR}.{PNGLIB_REVISION}"},
    "dependency": ["zlib-ng"],
    "srcPath": "../../libpng",
    "library": 
    {
        "static": [],
        "dynamic": []
    },
    "targets":
    {
        "cxx":
        {
            "incpath": [".", "$(BuildDir)", "../zlib-ng", "$(BuildDir)/../zlib-ng"]
        },
        "asm":
        {
            "sources":[{"ifeq": {"arch": "arm"}, "+": "arm/*.S"}]
        },
        "c":
        {
            "sources": 
            [
                "*.c", 
                {"ifeq": {"arch": "x86"}, "+": "intel/*.c"},
                {"ifeq": {"arch": "arm"}, "+": "arm/*.c"},
                {"-": "example.c"}
            ],
            "defines":
            [
                {"ifeq": {"arch": "x86"}, "+": "PNG_INTEL_SSE"},
                {"ifeq": {"arch": "arm"}, "+": "PNG_ARM_NEON_API_SUPPORTED"},
                {"ifeq": {"arch": "arm"}, "ifno": "iOS", "+": "PNG_ARM_NEON_CHECK_SUPPORTED"}
            ]
        }
    }
}