{
    "name": "SystemCommon",
    "type": "dynamic",
    "description": "common library for some system-level utilities",
    "dependency": ["StringUtil", "cpuid"],
    "library": 
    {
        "static": [],
        "dynamic": 
        [
            {"ifno": "ghc_fs", "ifeq": {"compiler": "clang"}, "iflt": {"clangVer": 70000}, "+": "c++experimental"},
            {"ifno": "ghc_fs", "ifeq": {"compiler": "clang"}, "iflt": {"clangVer": 90000}, "ifge": {"clangVer": 70000}, "+": "c++fs"},
            {"ifno": "ghc_fs", "ifeq": {"compiler": "gcc"}, "iflt": {"gccVer": 90100}, "+": "stdc++fs"},
            "pthread", "readline", "dl", "backtrace"
        ]
    },
    "targets":
    {
        "cpp":
        {
            "sources": ["*.cpp", {"-": "HResultHelper.cpp"}],
            "defines":  ["SYSCOMMON_EXPORT"],
            "pch": "SystemCommonPch.h"
        }
        
    }
}