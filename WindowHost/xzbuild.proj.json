{
    "name": "WindowHost",
    "type": "dynamic",
    "description": "window host",
    "dependency": ["SystemCommon"],
    "library": 
    {
        "static": [],
        "dynamic": 
        [
            {"ifneq": {"osname": "Darwin"}, "+": ["X11", "X11-xcb", "xkbcommon", "xkbcommon-x11", "dbus-1"]}
        ]
    },
    "framework":
    {
        "framework": ["Cocoa"]
    },
    "targets":
    {
        "cpp":
        {
            "incpath": ["$pkg-config(dbus-1)"],
            "sources": 
            [
                "*.cpp",
                {"-": "WindowManagerWin32.cpp"}, 
                {"ifeq":  {"osname": "Darwin"}, "-": "WindowManagerXCB.cpp"},
                {"ifneq": {"osname": "Darwin"}, "-": "WindowManagerCocoa.cpp"}
            ],
            "defines": ["WDHOST_EXPORT"]
        }
    }
}